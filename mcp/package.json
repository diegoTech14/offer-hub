{
  "name": "@offer-hub/mcp-docs-server",
  "version": "1.0.0",
  "description": "MCP server that exposes OFFER-HUB documentation to AI assistants",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "offer-hub-docs": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
