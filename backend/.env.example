# ============================================
# OFFER-HUB Backend - Environment Variables
# ============================================
# Copy: cp .env.example .env
# Never commit .env to git!

# ============================================
# SECTION: SUPABASE CONFIGURATION
# ============================================
# Get from: Supabase Dashboard > Settings > API
# Use service_role key (NOT anon key)

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# SECTION: JWT AUTHENTICATION
# ============================================
# Generate: openssl rand -base64 32
# Min 32 characters

JWT_SECRET=your-jwt-secret-key-min-32-characters-long

# ============================================
# SECTION: WALLET ENCRYPTION
# ============================================
# Generate: openssl rand -base64 32
# Min 32 characters. Keep secure!

WALLET_ENCRYPTION_KEY=your-wallet-encryption-key-min-32-characters-long

# ============================================
# Email Configuration for Password Recovery
# ============================================

EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_password_for_applications
EMAIL_FROM=noreply@your_email

# ============================================
# Frontend URL for password reset links
# ============================================

FRONTEND_URL=http://localhost:3000

# ============================================
# Development: Set to true to log emails instead of sending
# ============================================

EMAIL_DISABLED=false

# ============================================
# SECTION: STELLAR NETWORK (solo Stellar testnet)
# ============================================
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org:443
NETWORK_PASSPHRASE="Test SDF Network ; September 2015"
STELLAR_NETWORK_PASSPHRASE="Test SDF Network ; September 2015"

# ============================================
# OAuth - Credentials
# ============================================

# ============================================
# Google OAuth
# ============================================

GOOGLE_CLIENT_ID=123456789-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-abcdefghijklmnopqrstuvwxyz123456
GOOGLE_CALLBACK_URL=http://localhost:4000/api/oauth/google/callback

# ============================================
# Github OAuth
# ============================================

GITHUB_CLIENT_ID=tu_client_id_aqui
GITHUB_CLIENT_SECRET=tu_client_secret_aqui
GITHUB_CALLBACK_URL=http://localhost:4000/api/oauth/github/callback

# ============================================
# OAuth Encryption (optional, uses JWT_SECRET if not set)
# ============================================
OAUTH_TOKEN_ENCRYPTION_KEY=your-wallet-encryption-key-min-32-characters-long

# ============================================
# SECTION: SOROBAN SMART CONTRACTS
# ============================================
# Contract addresses deployed on Stellar network
# Get contract IDs after deploying contracts to testnet/mainnet

# Admin secret key for signing contract transactions
# WARNING: Keep this secure! Never commit to git!
STELLAR_ADMIN_SECRET_KEY=your-admin-secret-key-here

# Project Publication Contract
# Deployed contract address for recording project publications
PROJECT_PUBLICATION_CONTRACT_ID=your-project-publication-contract-id-here

# User Registry Contract (if needed)
USER_REGISTRY_CONTRACT_ID=your-user-registry-contract-id-here

# ============================================
# SECTION: TRUSTLESSWORK API
# ============================================
# TrustlessWork API for escrow operations
# Get API key from: https://docs.trustlesswork.com

TRUSTLESSWORK_API_KEY=your-trustlesswork-api-key-here
TRUSTLESSWORK_API_URL=https://dev.api.trustlesswork.com
